{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2016", "es5", "es6", "dom"],
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.test.ts"
  ]
}
