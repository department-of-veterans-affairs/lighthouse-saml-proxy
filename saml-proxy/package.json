{
  "name": "saml-proxy",
  "description": "SAML 2.0 Proxy allows modification/mediation of requests/responses",
  "version": "1.1.0",
  "private": false,
  "author": "Patrick Vinograd",
  "keywords": [
    "saml",
    "idp",
    "okta"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickvinograd/saml-proxy"
  },
  "bugs": {
    "url": "https://github.com/patrickvinograd/saml-proxy/issues"
  },
  "main": "./app.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prestart": "yarn build",
    "start": "node build/app.js",
    "test": "jest",
    "test:ci": "jest --ci --testResultsProcessor=\"./node_modules/jest-junit-reporter\"",
    "test:watch": "jest --watch",
    "start-dev": "ts-node -r source-map-support/register src/app.js --config dev-config.json",
    "ci": "npm run-script test:ci",
    "dev": "./node_modules/nodemon/bin/nodemon.js"
  },
  "jest": {
    "transform": {
      ".(js|ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ]
  },
  "bin": "./bin/run.js",
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "@department-of-veterans-affairs/formation": "^1.12.0",
    "body-parser": "~1.18.3",
    "cookie-parser": "~1.4.3",
    "debug": "~3.1.0",
    "event-stream": "^3.3.4",
    "express": "^4.16.4",
    "express-prom-bundle": "^4.2.1",
    "express-session": "^1.15.6",
    "extend": "^3.0.1",
    "font-awesome": "^4.7.0",
    "hbs": "~4.0.1",
    "lodash.assignin": "^4.2.0",
    "lodash.isstring": "^4.0.1",
    "lodash.omit": "^4.5.0",
    "lodash.template": "^4.4.0",
    "morgan": "~1.9.0",
    "node-sass-middleware": "^0.11.0",
    "node-sass-tilde-importer": "^1.0.2",
    "passport": "^0.4.0",
    "passport-wsfed-saml2": "git+https://github.com/edpaget/passport-wsfed-saml2.git",
    "request": "^2.87.0",
    "samlp": "git+https://github.com/edpaget/node-samlp.git",
    "uswds": "^1.6.8",
    "xml-formatter": "^1.0.1",
    "xml2js": "^0.4.19",
    "xmldom": "^0.1.27",
    "yargs": "^12.0.4"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/handlebars": "^4.0.39",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.9",
    "@types/samlp": "^1.0.7",
    "@types/xmldom": "^0.1.29",
    "jest": "^23.5.0",
    "jest-junit-reporter": "^1.1.0",
    "nodemon": "^1.18.6",
    "source-map-support": "^0.5.9",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  }
}
