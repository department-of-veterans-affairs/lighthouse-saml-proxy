{
  "name": "saml-proxy",
  "description": "SAML 2.0 Proxy allows modification/mediation of requests/responses",
  "version": "1.1.0",
  "private": false,
  "author": "Department of Veterans Affairs",
  "keywords": [
    "saml",
    "idp",
    "okta"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/department-of-veterans-affairs/vets-saml-proxy.git"
  },
  "bugs": {
    "url": "https://github.com/department-of-veterans-affairs/vets-saml-proxy/issues"
  },
  "main": "./app.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prestart": "yarn build && npx eslint .",
    "start": "node build/app.js",
    "lint": "npx eslint .",
    "lint-fix": "npx eslint . --fix",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch",
    "start-dev": "npx eslint . && ts-node -r source-map-support/register src/app.js --config dev-config.json",
    "dev": "./node_modules/nodemon/bin/nodemon.js"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "lines": 80.62
      }
    },
    "transform": {
      ".(js|ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  },
  "bin": "./bin/run.js",
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "@department-of-veterans-affairs/formation": "^6.9.5",
    "@sentry/node": "^5.7.1",
    "@types/express-session": "^1.15.11",
    "@types/lodash.assignin": "^4.2.4",
    "@types/morgan": "^1.7.36",
    "@types/passport": "^1.0.0",
    "@types/redis": "^2.8.28",
    "@types/request": "^2.48.1",
    "@types/request-promise-native": "^1.0.15",
    "@types/xml2js": "^0.4.5",
    "acorn": "^7.4.0",
    "body-parser": "~1.18.3",
    "btoa": "^1.2.1",
    "cls-rtracer": "^2.3.0",
    "connect-flash": "^0.1.1",
    "cookie-parser": "~1.4.3",
    "debug": "~3.1.0",
    "eslint-plugin-jest": "^23.20.0",
    "event-stream": "^3.3.4",
    "express": "^4.16.4",
    "express-prom-bundle": "^5.1.5",
    "express-session": "^1.15.6",
    "extend": "^3.0.1",
    "font-awesome": "^4.7.0",
    "hbs": "^4.1.1",
    "lodash.assignin": "^4.2.0",
    "lodash.isstring": "^4.0.1",
    "lodash.omit": "^4.5.0",
    "lodash.template": "^4.5.0",
    "morgan": "~1.9.0",
    "node-cache": "^5.1.2",
    "node-sass": "^4.14.1",
    "node-sass-middleware": "^0.11.0",
    "node-sass-tilde-importer": "^1.0.2",
    "passport": "^0.4.0",
    "passport-wsfed-saml2": "^4.4.0",
    "prom-client": "^11.5.2",
    "redis": "^3.0.2",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "samlp": "^6.0.0",
    "uswds": "^1.6.10",
    "uuid": "^3.3.2",
    "winston": "^3.3.3",
    "xml-formatter": "^1.0.1",
    "xml2js": "^0.4.19",
    "xmldom": "^0.1.27",
    "yargs": "^16.0.3",
    "yargs-parser": "^13.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/handlebars": "^4.0.39",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.17.28",
    "@types/samlp": "^1.0.7",
    "@types/xmldom": "^0.1.29",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "nodemon": "^2.0.4",
    "prettier": "2.1.1",
    "source-map-support": "^0.5.9",
    "ts-jest": "^26.3.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.9.7"
  }
}
