{
  "name": "oauth-proxy",
  "version": "1.0.0",
  "description": "Proxies requests to Okta to conform to FHIR API standard",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:ci": "jest --ci",
    "prestart": "npx eslint .",
    "start": "node index.js --config dev-config.json",
    "lint": "npx eslint .",
    "lint-fix": "npx eslint . --fix",
    "jsdoc": "./node_modules/.bin/jsdoc .",
    "help": "node index.js --help"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 90
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/department-of-veterans-affairs/vets-saml-proxy.git"
  },
  "author": "Department of Veterans Affairs",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/department-of-veterans-affairs/vets-saml-proxy/issues"
  },
  "homepage": "https://github.com/department-of-veterans-affairs/vets-saml-proxy#readme",
  "dependencies": {
    "@okta/okta-sdk-nodejs": "^4.4.0",
    "@sentry/node": "^5.30.0",
    "aws-sdk": "^2.859.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cls-rtracer": "^2.6.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-prom-bundle": "^5.1.5",
    "express-session": "^1.17.1",
    "jwt-decode": "^2.2.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "openid-client": "^3.15.10",
    "process": "^0.11.10",
    "prom-client": "^11.5.3",
    "uuid": "^8.3.2",
    "validator": "^13.5.2",
    "winston": "^3.3.3",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.19.0",
    "babel-eslint": "^10.1.0",
    "crypto": "^1.0.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest": "^24.1.9",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "mock-express-request": "^0.2.2",
    "mock-express-response": "^0.3.0",
    "njwt": "^1.0.0",
    "prettier": "2.2.1",
    "timekeeper": "^2.2.0"
  }
}
