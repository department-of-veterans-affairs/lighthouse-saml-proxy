{
  "name": "oauth-proxy",
  "version": "1.0.0",
  "description": "Proxies requests to Okta to conform to FHIR API standard",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:ci": "jest --ci",
    "prestart": "npx eslint .",
    "start": "node index.js --config dev-config.json",
    "lint": "npx eslint .",
    "lint-fix": "npx eslint . --fix",
    "help": "node index.js --help"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 74
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/department-of-veterans-affairs/oauth-proxy.git"
  },
  "author": "Ed Paget",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/department-of-veterans-affairs/oauth-proxy/issues"
  },
  "homepage": "https://github.com/department-of-veterans-affairs/oauth-proxy#readme",
  "dependencies": {
    "@okta/okta-sdk-nodejs": "^4.2.0",
    "@sentry/node": "^5.7.1",
    "aws-sdk": "^2.372.0",
    "axios": "^0.19.2",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "eslint-plugin-jest": "^24.1.0",
    "express": "^4.16.4",
    "express-prom-bundle": "^5.1.5",
    "express-session": "^1.15.6",
    "jwt-decode": "^2.2.0",
    "morgan": "^1.9.1",
    "node-cache": "^5.1.2",
    "openid-client": "^3.15.10",
    "prom-client": "^11.5.2",
    "validator": "^13.1.1",
    "winston": "^3.2.1",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "crypto": "^1.0.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.0",
    "mock-express-request": "^0.2.2",
    "mock-express-response": "^0.2.2",
    "prettier": "2.0.5",
    "timekeeper": "^2.2.0"
  }
}
